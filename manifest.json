{
  "manifest_version": 3,
  "name": "NPC Comment Blocker",
  "version": "0.1",
  "description": "Blocks YouTube comments containing npc phrases and words.",
  "permissions": ["activeTab", "scripting"],
  "icons": {
    "16": "./icons/icon16.png",
    "32": "./icons/icon32.png",
    "48": "./icons/icon48.png",
    "128": "./icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "js": ["content.js"]
    }
  ]
}
